# Production Environment Variables
# Copy this file to .env for Docker deployment

# MongoDB
MONGO_PASSWORD=your-strong-mongodb-password-here

# JWT Secrets (IMPORTANT: Generate strong random secrets!)
JWT_SECRET=generate-a-strong-random-secret-minimum-64-characters-for-production
JWT_REFRESH_SECRET=generate-another-strong-random-secret-minimum-64-characters

# Email Configuration
EMAIL_PASSWORD=your-email-app-password-here

# Admin Credentials
ADMIN_PASSWORD=your-strong-admin-password-here

# URLs
FRONTEND_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com/api
NEXT_PUBLIC_APP_URL=https://your-domain.com
